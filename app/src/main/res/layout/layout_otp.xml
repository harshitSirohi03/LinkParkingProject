            app:layout_constraintEnd_toEndOf="@+id/editText24"
            app:layout_constraintStart_toStartOf="@+id/editText24"
            app:layout_constraintTop_toBottomOf="@+id/editText24" />

        <View
            android:id="@+id/view66"
            android:layout_width="0dp"
            android:layout_height="0.5dp"
            android:layout_marginTop="10dp"
            android:background="@color/colorGreyUnderLine"
            app:layout_constraintEnd_toEndOf="@+id/editText25"
            app:layout_constraintStart_toStartOf="@+id/editText25"
            app:layout_constraintTop_toBottomOf="@+id/editText25" />

        <com.example.linkmyparkingproject.views.SourceSansProRegularTextView
            android:id="@+id/textView8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"
            android:text="Resend OTP"
            android:textColor="@color/colorBlue"
            android:textSize="14sp"
            android:padding="5dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/txt_submit"
            app:layout_constraintStart_toStartOf="@+id/txt_submit"
            app:layout_constraintTop_toBottomOf="@+id/txt_submit" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>